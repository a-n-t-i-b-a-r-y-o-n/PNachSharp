<fw:AcrylicWindow x:Class="PNachSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PNachSharp"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        NoiseOpacity="0"
        Background="{DynamicResource SystemAltHighColorBrush}">
    <Grid Margin="8px" fw:PointerTracker.Enabled="True" Background="{DynamicResource SystemAltHighColorBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition Height="0.9*" />
            <RowDefinition Height="0.05*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:LeftPane Grid.Row="1" Grid.Column="0" Margin="0,0,4,0" />
        <GridSplitter Grid.Row="1" Grid.Column="0" Width="4" Background="Transparent"
                      ResizeDirection="Columns" 
                      VerticalAlignment="Stretch" 
                      HorizontalAlignment="Right" />
        <local:RightPane Grid.Row="1" Grid.Column="1" Margin="0,0,0,0" />
    </Grid>
</fw:AcrylicWindow>
